# Django
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=allowed hosts

# Database
DB_NAME=name of postgres db
DB_USER=username owner of db
DB_PASSWORD=password owner of db
DB_HOST=host db
DB_PORT=port db

# Restaurant Settings
OPEN_TIME=open restaurant time
CLOSE_TIME=close restaurant time
MAX_BOOKING_HOURS=maximum time for booking (in hours)
CONTACT_PHONE=contact phone
CONTACT_EMAIL=contact e-mail
ADDRESS=restaurant address
RESTAURANT_NAME=restaurant name
RESTAURANT_DESCRIPTION=restaurant description

# Email
EMAIL_HOST=smtp host address
EMAIL_PORT=smtp port
EMAIL_USE_TLS=if use = True, if not = False
EMAIL_HOST_USER=your-email
EMAIL_HOST_PASSWORD=your-app-password (not e-mail password)
DEFAULT_FROM_EMAIL=your-email
SERVER_EMAIL=your-email

# Restaurant Rules
BOOKING_RULES=rules for booking(format: Booking for 1-4 hours|Cancellation 2 hours before the visit)
MAX_BOOKING_DAYS_AHEAD=days for booking ahead (example:30)